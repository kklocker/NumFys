import numpy as np
import matplotlib.pyplot as plt
from main import boltzmann
from utils import U


if __name__ == "__main__":
    x = np.linspace(0.001, 2, 10000)
    u = U(x, 0.0, alpha=0.2, tau=1.0, flashing=False)
    kbt = 1.0

    plt.plot(x, u, label="U(x)")
    plt.legend()
    plt.show()
    for k in [0.1, 1, 10, 100]:
        du = k * kbt
        bltz = boltzmann(u, du, kbt)
        plt.plot(u, bltz, label=f"du/kbt = {k}")

    plt.legend()
    plt.show()
